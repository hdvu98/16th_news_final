{{#section 'js'}}
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script>
  $(function () {

    
            $("#menu-toggle").click(function(e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
              });

    $('#frmRegister').validate({
      rules: {
        cmbCate: {
          required: true,
         
        },
      },
      messages: {
        cmbCate: {
            required: 'Category name is required.',
         
        }
        
      },

      errorElement: 'small',
      errorClass: 'help-block text-danger',
      validClass: 'is-valid',
      highlight: function (e) {
        $(e).removeClass('is-valid').addClass('is-invalid');
      },
      unhighlight: function (e) {
        $(e).removeClass('is-invalid').addClass('is-valid');
      }
    });
  })
</script>
{{/section}}


  <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-dark border-right" id="sidebar-wrapper">
          <div class="sidebar-heading"><i class="fa fa-dashboard"></i> Dashboard </div>
          <div class="list-group list-group-flush">
            <a href="/powerful/adminCateMag" class="list-group-item list-group-item-action bg-dark">Categories Management</a>
            <a href="/powerful/adminTagMag" class="list-group-item list-group-item-action bg-dark">Tags Management</a>
            <a href="/powerful/adminMemberMag" class="list-group-item list-group-item-action bg-dark">Member Management</a>
            <a href="/powerful/adminWriterMag" class="list-group-item list-group-item-action bg-dark">Writer Management</a>
            <a href="/powerful/adminEditorMag" class="list-group-item list-group-item-action bg-dark active">Editor Management</a>
            <a href="/powerful/adminPostMag" class="list-group-item list-group-item-action bg-dark">Post Management</a>

            
          </div>
        </div>
        <!-- /#sidebar-wrapper -->
    
        <!-- Page Content -->
        <div id="page-content-wrapper">
    
          <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn tag" id="menu-toggle"><i class="fa fa-navicon"></i></button>
    
            <!-- <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button> -->

          </nav>
       
      <div class="card shadow">
  <h4 class="card-header">
    Choose Category
  </h4>
  <div class="card-body">
    {{#if this.error}}
    <div class="alert alert-danger" role="alert">
      Invalid memberID.
      <a href="/powerful/addEditor" class="alert-link">Go Back</a>
    </div>
    {{else}}
    
    <form method="POST" action="/powerful/updateNewEditor" id="frmRegister" novalidate>
      <div class="form-group">
           {{#each this.idWriter}}
        <label for="txtCatID">#</label>
        <input readonly type="text" class="form-control" id="txtCatID" name="IDAccount" value="{{IDAccount}}">
      </div>
         {{/each}}
      <div class="form-group">
        <label for="txtCatName">Category</label>
       <select class="mdb-select md-form" name="cmbCate">
        <option value="" disabled selected>Choose category</option>
        
         {{#each lcCategories}}
         <option value="{{category.Name_parentscate}}-{{category.IDCate_Parents}}">{{category.Name_parentscate}}-{{category.IDCate_Parents}}</option>
         {{/each}}
        </select>
      </div>
      <a class="btn btn-primary" href="/powerful/addEditor" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        List
      </a>
      <button type="submit" class="btn btn-success">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </form>
    {{/if}}
  </div>
</div>
            
        <!-- /#page-content-wrapper -->
    
      </div>
   
  
</div>
