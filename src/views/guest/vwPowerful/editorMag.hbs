{{#section 'js'}}
  <script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>

<script>
    var modal = document.getElementById('myAcceptModal');
    var span = document.getElementsByClassName('close')[0];
    function viewSettings(){
		 modal.style.display = "block";
    }
    span.onclick = function() {
        modal.style.display = "none";
        }

    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
    </script>
    <!-- end-modal -->
    <!-- date -->
    <script>
             $('#datepicker').datetimepicker({
                dateformat: 'd/m/Y ',
                timeFormat:  "hh:mm:ss",
                timepicker: true,
                mask: true,
                });    
    </script>
    <!-- date -->

        <!-- search -->
        <script>
                $(document).ready(function(){
                  $("#searchInput").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#managementTable tr").filter(function() {
                      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                  });
                });
             </script>
        <!-- end search -->

    <script>
            $("#menu-toggle").click(function(e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
              });
    </script>
{{/section}}

 <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-dark border-right" id="sidebar-wrapper">
          <div class="sidebar-heading"><i class="fa fa-dashboard"></i> Dashboard </div>
          <div class="list-group list-group-flush">
            <a href="/powerful/editorMag" class="list-group-item list-group-item-action bg-dark active">Draft</a>
            <a href="/powerful/editorAccept" class="list-group-item list-group-item-action bg-dark">Accepted Post</a>

        </div>
        </div>
        <!-- /#sidebar-wrapper -->
    
        <!-- Page Content -->
        <div id="page-content-wrapper">
    
          <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn tag" id="menu-toggle"><i class="fa fa-navicon"></i></button>
    

          </nav>
    
            <div class="container-fluid ">
                   
                           
                    <div class="table-wrapper  box-shadow">
                                <div class="table-title bg-dark">
                                        <div class="row">
                                            <div class="col-sm-4">
                                                <h2>Post <b>Management</b></h2>
                                            </div>
                                            <div class="col-sm-8">						
                                                <a href="/powerful/editorMag" class="btn btn-primary"><i class="material-icons">î¡£</i> <span>Refresh List</span></a>
                                            </div>
                                        </div>
                                    </div>    
                            <div class="table-filter">
                                  <!-- filter -->
                                  <div class="row  mt-1">
                                      <div class="col">
                                      </div>
                                      <!-- end filter -->  
                                      <div class="col">
                                              <!-- search -->
                                        <div class="filter-group">
                                                <label>Search</label>
                                                <input type="text" class="form-control" id="searchInput">
                                                <button type="button" class="btn btn-primary"><i class="fa fa-search"></i></button>
                                            </div> 
                                            <!-- search -->       

                                      </div>
                                                
                                </div>
                
                                 
                            </div>
                            <table class="table table-striped table-hover" id="managementTable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Author</th>						
                                        <th>Date</th>											                                      
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each this.posts}}
                                        <div class="accept-modal" id="myAcceptModal">
                                            <div class="modal-content">
                                                <span class="close">&times;</span>
                                                <h3>Settings</h3>
                                                <form method="POST" action="/powerful/editor/accept/{{IDPost}}">                
                                                    <div class="form-group">
                                                            <label style="float: left;">Publish date: </label>
                                                             <input type="text" class="form-control" id="datepicker" name="pdate"  placeholder="Publish Time" autocomplete="off">
                                                    </div>
                                                    <div class="modal-submit">
                                                                    <button href="" type="submit" class="btn btn-view modal-btn" name="apply" value="apply">Apply</button>
                                                                    <a href=""  class="btn btn-remove modal-btn">Close</a>
                                                    </div>
                                                </form>
                                                
                                                <ol id="subjects" type="1" class="circle"style="margin-left:32px;">
                                                </ol>
                                            </div>
                                        </div>
                                    <div class="clearfix">
                                     <!-- /#wrapper -->   
                                    <tr class="table-row">
                                        <td>{{IDPost}}</td>
                                        <td><a href="/Powerful/raw/{{IDPost}}">{{Title}}</a></td>
                                        <td>{{Username}}</td>
                                        <td>{{DateComplete}}</td>                        
                                        <!-- <td><span class="status text-published">&bull;</span></td> -->
                                        <td>
                                            <form method="POST" action="/powerful/editor/deny/{{IDPost}}">
                                             <a href="/Powerful/raw/{{IDPost}}" class="btn btn-sm btn-view" title="View" data-toggle="tooltip"><i class="fa fa-eye"></i></a>
                                            <a href="#" class="btn btn-sm btn-edit" title="Accept"data-toggle="tooltip"onclick="viewSettings()"><i class="fa fa-check"></i></a>
                                            <button href="#" class="btn tbn-sm btn-remove" title="Deny" data-toggle="tooltip"><i class="fa fa-ban"></i></button>       

                                            </form>
                                        </td>
                                    </tr>
                                    {{/each}}
                                                 
                                </tbody>
                            </table>
                                <!-- <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div> -->
                                   <div class="row">
                        <div class="col-sm-12">
                            <nav aria-label="Page navigation example">
                            <ul class="pagination">
                               
                                <li class="page-item">
                                <a class="page-link" href="?page={{first}}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;First</span>
                                </a>
                                </li>
                                 {{#each this.pages}}
                                {{#if active}}
                                <li class="page-item active" aria-current="page">
                                <a class="page-link" href="javascript:;">
                                    {{value}} <span class="sr-only">(current)</span>
                                </a>
                                </li>
                                {{else}}
                                <li class="page-item">
                                <a class="page-link" href="?page={{value}}">{{value}}</a>
                                </li>
                                {{/if}}
                                {{/each}}
                                
                                <li class="page-item">
                                <a class="page-link" href="?page={{last}}" aria-label="Next">
                                    <span aria-hidden="true">Last&raquo;</span>
                                </a>
                                </li>
                                
                            </ul>
                            </nav>
                        </div>
                        </div>
                            </div>
                        </div>
               
             </div>
        </div>
